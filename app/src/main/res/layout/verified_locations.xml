<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ChooseVerifiedLocation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_marginTop="60dp"
                android:layout_marginBottom="15dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/prague"
                android:id="@+id/prague"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/london"
                android:id="@+id/london"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/paris"
                android:id="@+id/paris"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/berlin"
                android:id="@+id/berlin"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:text="@string/verified_location"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:shadowDy="0"
        android:shadowDx="0"
        android:shadowColor="@android:color/black"
        android:shadowRadius="5"
        android:background="#AA000000"/>
</RelativeLayout>