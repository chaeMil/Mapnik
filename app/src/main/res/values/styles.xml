<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/actionbar_background</item>
    </style>

    <color name="actionbar_background">#88000000</color>


    <style name="SignInOutBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignOutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign Out</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SignInOutBarBlurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <string name="custom_font_regular" translatable="false">fonts/RobotoSlab-Regular.ttf</string>
    <string name="custom_font_bold" translatable="false">fonts/RobotoSlab-Bold.ttf</string>
</resources>
